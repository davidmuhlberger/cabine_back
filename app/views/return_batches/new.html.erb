<%= content_for(:title) do %>
  Nouveau retour
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <h1>Choix de modèle pour le retour auprès de <%= @return.brand.name %></h1>
      <br>

      <%= simple_form_for(@return_batch, url: return_return_batches_path(@return)) do |f| %>
        <%= f.error_notification %>
        <%= f.input :product_id, :label => "Modèle", :collection => @products %>
        <p><%= f.button :submit, :label => "Choisir les pointures" %></p>
      <% end %>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>
