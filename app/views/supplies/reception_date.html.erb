<%= content_for(:title) do %>
  Appro reçu
<% end %>
<div class="container">
  <div class="row">
    <div class="col-xs-2"></div>
    <div class="col-xs-8">
      <h1>Réception de la commande <%= @supply.id %></h1>
      <br>

      <%= simple_form_for(@supply, url: supplies_reception_path(@supply)) do |f| %>
        <%= f.error_notification %>
        <%= f.input :reception_date, as: :string, :input_html => { :data => {:provide => :datepicker, 'date-format': "dd/mm/yyyy", 'date-start-date': Date.today.strftime('%d-%m-%Y'), 'date-autoclose': true} } %>
        <p><%= f.button :submit, :label => "Valider les quantités" %></p>
      <% end %>
    </div>
    <div class="col-xs-2"></div>
  </div>
</div>
