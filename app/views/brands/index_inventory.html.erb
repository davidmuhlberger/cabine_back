<div class="container">
  <% @brands.each do |brand| %>
    <div class="row">
      <div class="col-xs-12">
        <h3><%= brand.name %></h3>
      </div>
      <% brand.products.each do |product| %>
        <% if product.availability == "En catalogue" %>
          <div class="row">
            <div class="col-xs-1"></div>
            <div class="col-xs-11">
              <%= product.name %>
            </div>
          </div>
          <% product.product_refs.each do |product_ref| %>
            <div class="row">
              <div class="col-xs-2"></div>
              <div class="col-xs-4">
                <%= product_ref.sku_name %>
              </div>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
